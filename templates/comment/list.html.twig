{% for comment in comments %}
<div class="card-body p-1">
    <div class="card mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between">
                <div class="d-flex flex-row align-items-center">
                    <p class="small mb-0 ms-2"> {{ comment.user.name }}</p>
                </div>
                <div class="d-flex flex-row align-items-center">
                    <p class="small text-muted mb-0">{{ comment.dateCreate|date("d/m/Y") }}</p>
                </div>
            </div>
            <div>
                <p class="ms-2"> {{ comment.description }}</p>
            </div>
        </div>
    </div>
    {% else %}
    <h3>No comments</h3>
</div>
{% endfor %}