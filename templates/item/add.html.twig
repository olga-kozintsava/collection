{% extends 'base.html.twig' %}
{% block title %}Add collection{% endblock %}

{% block body %}
    {{ app.user.id }}
    <div class="container">
        <div class="row d-flex justify-content-center" style="margin: 50px">
            <div class="col-md-6 col-md-offset-6 ">
                <div class="add_category">
                    {{ form_start(form, { 'action': path('item_add'), 'method': 'POST'})}}

                    <div>{{ form_label(form.title) }}
                        {{ form_widget(form.title) }}
                        {{ form_errors(form.title) }}
                    </div>
                    <div>  {{ form_label(form.tag) }}
                        {{ form_widget(form.tag) }}
                        {{ form_errors(form.tag) }}
                    </div>

                    <div>
                        {{ form_widget(form.add ) }}
                    </div>
                    {{ form_end(form) }}

                </div>
            </div>

        </div>
    </div>

{% endblock %}